
  <style>
    body {
      font-family: Arial, sans-serif;
      margin-top: 100px;
    }
    
    h1 {
      text-align: left;
      padding-left: 9rem;
    }
    
    img {
      display: block;
      margin: 0 auto;
      max-width: 200px;
      height: auto;
    }
    
    table {
      margin: 20px auto;
      border-collapse: collapse;
      width: 80%;
    }
    
    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h1>Transaction History</h1>

  
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      {{#each walletHistory.walletHistory}}
      <tr>
        <td>{{date}}</td>
            {{#if credit}}
        <td>Credit</td>
        {{/if}}
        {{#if debit}}
       <td>Debit</td>
        {{/if}}
       {{#if credit}}
        <td>{{credit}}</td>
        {{/if}}
        {{#if debit}}
       <td>{{debit}}</td>
        {{/if}}
      </tr>
      {{/each}}
   
    </tbody>
  </table>

