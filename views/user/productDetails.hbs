<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function addToCart(productId) {
    $.ajax({
      url: '/addtocart?id=' + productId,
      type: 'get',
      data: {
        productId
      },
      success: (res) => {
        if (res.message == "success") {
          Swal.fire({
           
            icon: 'success',
            title:  'The product is added to cart!',
            showConfirmButton: false,
            timer: 1500
          })


        }
      }, error: (err) => {
        console.log("error in addtocart ajax" + err);
      }

    })
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function addToWishlist(productId) {
    $.ajax({
      url: "/addWishlist?id=" + productId,
      type: 'get',
      data: {
        productId
      },
      success: (res) => {
        if (res.message == "success") {
          Swal.fire({
            icon: 'success',
            title:  'The product is added to wishlist!',
            showConfirmButton: false,
            timer: 1500
          });
        } else {
          Swal.fire(
            'Warning',
            'rejected'
          );
        }
      },
      error: () => {
        Swal.fire(
          'Error',
          'An error occurred while adding to wishlist'
        );
      }
    });
  }
</script>